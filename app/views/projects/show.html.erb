<h3>Project pipeline detail</h3>
<strong>Project : </strong><%= Project.find(params[:id]).title %></p>
<strong>Duration : </strong><%= @duration %> months</p>
<strong>Current Leader : </strong><%= link_to @pipelines.last.lead, :controller => 'pipelines', :action => 'show'%>
	<ul><% @pipelines.each do |pipeline| %>
		<li><%= pipeline.year.to_s + "/" + pipeline.month.to_s  %>: 
Stafftime = <%= number_to_currency(pipeline.stafftime, :unit => "&pound;", :separator => ".", :delimiter => ",", :precision => 0)  %> | Total budget = <%= number_to_currency(pipeline.budget, :unit => "&pound;", :separator => ".", :delimiter => ",", :precision => 0) %></li>
	<% end %>
	</ul>

